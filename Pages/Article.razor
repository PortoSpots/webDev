@page "/article/{ArticleName}"

@*------FullScreen Carousel---------*@
@if (isFullCarouselOpen)
{
	<MudOverlay @bind-Visible="isFullCarouselOpen" DarkBackground="true" AutoClose="true" Style="z-index:1200;" />
	<MudFab Color="Color.Transparent" Icon="@Icons.Rounded.Close" Size="Size.Small" IconSize="Size.Medium" DisableElevation=true Style="color: white;z-index:1202;position:absolute;top:7%;right:6%;" OnClick=@CloseOverlay />
	<MudCarousel SelectedIndex=fullScreenTabIndex class="articleImages d-flex" ShowDelimiters=true Style="z-index:1201;position:absolute;top:50%;left:50%;height:90%;width:90%;transform:translate(-50%,-50%)" AutoCycle=false TData=object>
		<DelimiterTemplate Context="selected">
			<div Class="mud-button-root mud-icon-button mud-icon-button-color-inherit mud-ripple mud-ripple-icon">
				<span class="carouselTab @(selected ? "carouselTab-selected" :"")" />
				@*<span class="fullCarouselTab @(selected ? "fullCarouselTab-selected" :"")" style="@fullCarousel[fullScreenTabIndex]"/>*@
			</div>
		</DelimiterTemplate>
		<ChildContent>
			@foreach (var articlePic in articlePicUrls)
			{
				<MudCarouselItem Transition=Transition.Fade Color=Color.Primary>
					<div class="d-flex flex-column flex-column justify-center" style="height:100%">
						<div class="d-flex" style="height:100%">
							<img class="fitter" src="@articlePic" />
						</div>
					</div>
				</MudCarouselItem>
			}

		</ChildContent>
	</MudCarousel>
}
