@page "/fetchdata"
@inject HttpClient Http

<h1>Fetch Data</h1>

<p>This component demonstrates fetching data from the json file</p>

@if (items == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div style="display:flex;flex-direction:row;overflow:scroll;">
        @foreach( var item in items)
        {
            <p>@item.Title</p>
            <img style="width:400px;height:200px;"  src="@item.Thumbnail"/>
            <p>@item.Description</p>
        }  
    </div>
}

@code {
    private ItemTest[]? items;

    protected override async Task OnInitializedAsync()
    {
        items = await Http.GetFromJsonAsync<ItemTest[]>("sample-data/records.json");
    }

    public record ItemTest
    {
        public string? Thumbnail { get; set; }
        public string? Title { get; set; }
        public string? Description { get; set; }

    }
}